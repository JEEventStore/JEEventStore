<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd" 
    version="3.1">

    <enterprise-beans>    

        <session>
            <ejb-name>EventStoreCommitNotifier</ejb-name>
            <business-local>org.jeeventstore.core.notifier.EventStoreCommitNotifier</business-local>
            <ejb-class>org.jeeventstore.core.notifier.SyncEventStoreCommitNotifier</ejb-class>
            <session-type>Singleton</session-type>
            <init-on-startup>true</init-on-startup>
        </session>

    </enterprise-beans>

</ejb-jar>